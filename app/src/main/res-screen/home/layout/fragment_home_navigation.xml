<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomNavigationContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:theme="@style/AppTheme"
    tools:background="@android:color/white">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/recent"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:drawableTop="@drawable/ic_layers"
        android:drawablePadding="@dimen/margin_micro"
        android:gravity="center"
        android:padding="12dp"
        android:text="@string/recent"
        android:textColor="@drawable/selector_navigation_view_item"
        android:textSize="@dimen/text_size_mini"
        app:drawableTint="@drawable/selector_navigation_view_item"
        app:fontFamily="@font/montserrat_semibold" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/repo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:drawableTop="@drawable/ic_box"
        android:drawablePadding="@dimen/margin_micro"
        android:gravity="center"
        android:padding="12dp"
        android:text="@string/repositories"
        android:textColor="@drawable/selector_navigation_view_item"
        android:textSize="@dimen/text_size_mini"
        app:drawableTint="@drawable/selector_navigation_view_item"
        app:fontFamily="@font/montserrat_semibold" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/more"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:drawableTop="@drawable/ic_more_horizontal"
        android:drawablePadding="@dimen/margin_micro"
        android:gravity="center"
        android:padding="12dp"
        android:text="@string/more"
        android:textColor="@drawable/selector_navigation_view_item"
        android:textSize="@dimen/text_size_mini"
        android:visibility="visible"
        app:drawableTint="@drawable/selector_navigation_view_item"
        app:fontFamily="@font/montserrat_semibold" />

</LinearLayout>