<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor">

    <include
        android:id="@+id/includeToolbar"
        layout="@layout/appbar_and_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsvPullRequestDetail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/includeToolbar"
        tools:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgUser"
                android:layout_width="@dimen/image_size_default"
                android:layout_height="@dimen/image_size_default"
                android:layout_margin="@dimen/margin_default"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@mipmap/ic_launcher" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtPullRequestAuthor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_default"
                android:layout_marginEnd="@dimen/margin_default"
                app:fontFamily="@font/montserrat_semibold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/imgUser"
                app:layout_constraintTop_toTopOf="@id/imgUser"
                tools:text="By Darth Maul" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtAuthorNickname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:textSize="@dimen/text_size_mini"
                app:fontFamily="@font/montserrat_regular"
                app:layout_constraintEnd_toEndOf="@id/txtPullRequestAuthor"
                app:layout_constraintStart_toStartOf="@id/txtPullRequestAuthor"
                app:layout_constraintTop_toBottomOf="@id/txtPullRequestAuthor"
                tools:text="lordvader" />

            <View
                android:id="@+id/vwDividerAuthor"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_margin="@dimen/margin_default"
                android:background="@color/gray_alpha"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtAuthorNickname" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgRepositoryIcon"
                android:layout_width="@dimen/image_size_default"
                android:layout_height="@dimen/image_size_default"
                android:layout_margin="@dimen/margin_default"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vwDividerAuthor"
                tools:src="@mipmap/ic_launcher" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtRepositoryName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_default"
                app:fontFamily="@font/montserrat_semibold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/imgRepositoryIcon"
                app:layout_constraintTop_toTopOf="@id/imgRepositoryIcon"
                tools:text="DarthVader/DeathStar" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtPullRequestBranches"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:textSize="@dimen/text_size_mini"
                app:fontFamily="@font/montserrat_regular"
                app:layout_constraintEnd_toEndOf="@id/txtRepositoryName"
                app:layout_constraintStart_toStartOf="@id/txtRepositoryName"
                app:layout_constraintTop_toBottomOf="@id/txtRepositoryName"
                tools:text="Develop > Master" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtPullRequestCreatedDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:textSize="@dimen/text_size_mini"
                app:fontFamily="@font/montserrat_regular"
                app:layout_constraintEnd_toEndOf="@id/txtRepositoryName"
                app:layout_constraintStart_toStartOf="@id/txtRepositoryName"
                app:layout_constraintTop_toBottomOf="@id/txtPullRequestBranches"
                tools:text="Created on 09/22/2019" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtPullRequestDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:textSize="@dimen/text_size_mini"
                app:fontFamily="@font/montserrat_regular"
                app:layout_constraintEnd_toEndOf="@id/txtRepositoryName"
                app:layout_constraintStart_toStartOf="@id/txtRepositoryName"
                app:layout_constraintTop_toBottomOf="@id/txtPullRequestCreatedDate"
                tools:text="* text - fixed fab buttons position\n* general - fixed some bugs\n* category - changed message to amount validator\n* text - fixed fab buttons position\n* general - fixed some bugs\n* category - changed message to amount validatorâ€Œ" />

            <View android:id="@+id/vwDividerSection"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginVertical="@dimen/margin_super"
                android:layout_marginHorizontal="@dimen/margin_default"
                android:background="@color/gray_alpha"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtPullRequestDescription"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtRepositories"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:drawablePadding="@dimen/margin_default"
                android:gravity="center_vertical"
                android:padding="@dimen/margin_default"
                android:text="Commits"
                app:drawableStartCompat="@drawable/ic_box"
                app:drawableTint="?attr/colorOnBackground"
                app:fontFamily="@font/montserrat_semibold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vwDividerSection" />

            <View
                android:id="@+id/vwDividerRepositories"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/margin_default"
                android:background="@color/gray_alpha"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtRepositories" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtTheme"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:drawablePadding="@dimen/margin_default"
                android:gravity="center_vertical"
                android:padding="@dimen/margin_default"
                android:text="Reviewers"
                android:transitionName="@string/shared_element_theme"
                app:drawableStartCompat="@drawable/ic_sun"
                app:drawableTint="?attr/colorOnBackground"
                app:fontFamily="@font/montserrat_semibold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vwDividerRepositories" />

            <View
                android:id="@+id/vwDividerTheme"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/margin_default"
                android:background="@color/gray_alpha"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtTheme" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtLogout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:drawablePadding="@dimen/margin_default"
                android:gravity="center_vertical"
                android:padding="@dimen/margin_default"
                android:text="Comments"
                app:drawableStartCompat="@drawable/ic_logout"
                app:drawableTint="?attr/colorOnBackground"
                app:fontFamily="@font/montserrat_semibold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vwDividerTheme" />

            <View
                android:id="@+id/vwDividerLogout"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/margin_default"
                android:background="@color/gray_alpha"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtLogout" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>