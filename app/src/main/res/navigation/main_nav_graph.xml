<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main_nav_graph"
        app:startDestination="@id/splashFragment">

    <fragment
            android:id="@+id/splashFragment"
            android:name="br.com.isgreen.archandroid.screen.splash.SplashFragment"
            android:label="fragment_simulator"
            tools:layout="@layout/fragment_splash">

        <action
                android:id="@+id/action_splashFragment_to_loginFragment"
                app:destination="@id/loginFragment" />

        <action
                android:id="@+id/action_splashFragment_to_homeFragment"
                app:destination="@id/homeFragment" />

    </fragment>

    <fragment
            android:id="@+id/loginFragment"
            android:name="br.com.isgreen.archandroid.screen.login.LoginFragment"
            android:label="fragment_login"
            tools:layout="@layout/fragment_login">

        <action
                android:id="@+id/action_loginFragment_to_homeFragment"
                app:destination="@id/homeFragment" />

    </fragment>

    <fragment
            android:id="@+id/homeFragment"
            android:name="br.com.isgreen.archandroid.screen.home.HomeFragment"
            android:label="fragment_home"
            tools:layout="@layout/fragment_home" />

</navigation>