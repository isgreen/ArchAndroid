<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/more"
    app:startDestination="@id/moreFragment">

    <fragment
        android:id="@+id/moreFragment"
        android:name="br.com.isgreen.archandroid.screen.more.MoreFragment"
        android:label="fragment_more"
        tools:layout="@layout/fragment_more">

        <action
            android:id="@+id/action_moreFragment_to_themeFragment"
            app:destination="@id/themeFragment" />

        <action
            android:id="@+id/action_moreFragment_to_userFragment"
            app:destination="@id/userFragment" />

    </fragment>

    <fragment
        android:id="@+id/userFragment"
        android:name="br.com.isgreen.archandroid.screen.user.UserFragment"
        android:label="fragment_user"
        tools:layout="@layout/fragment_user" >

        <action
            android:id="@+id/action_userFragment_to_repoFragment"
            app:destination="@id/repoFragment" />

    </fragment>

    <fragment
        android:id="@+id/repoFragment"
        android:name="br.com.isgreen.archandroid.screen.repo.RepoFragment"
        android:label="fragment_repo"
        tools:layout="@layout/fragment_repo" />

    <fragment
        android:id="@+id/themeFragment"
        android:name="br.com.isgreen.archandroid.screen.theme.ThemeFragment"
        android:label="fragment_theme"
        tools:layout="@layout/fragment_theme" />

</navigation>