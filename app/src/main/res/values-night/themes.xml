<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme.DarkLight" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_light</item>
        <item name="colorSecondaryVariant">@color/green</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <!-- Background color. -->
        <item name="backgroundColor">@color/black</item>
        <item name="colorOnBackground">@android:color/white</item>

        <!-- Surface color. -->
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@android:color/white</item>

        <item name="colorPrimarySurface">@color/colorTextPrimary</item>
        <item name="colorOnPrimarySurface">@android:color/white</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="AppTheme.ThemeOverlay" parent="ThemeOverlay.AppCompat.Dark" />
    <!--    <style name="AppTheme.AlertDialogTheme" parent="@android:style/Theme.Material.Light.Dialog.Alert"/>-->

</resources>